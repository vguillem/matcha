<% include ../header %>
<p class='titre'>Trouvez votre MATCH !</p>
<div class='containers'>
<div class='row'>
<div class='offset-1 col-1 history'>
	<% if (locals.hist) {locals.hist.forEach(function(htmp) {%>
		<div class='hist_action'>
			<a href='/user?id=<%= htmp.visiteur %>'><%= htmp.login%></a> : <%= htmp.action %> le <%= htmp.heure %>
		</div>
	<% })} %>
</div>
<div class='col-9'>
<form class='containers offset-1 col-10' method='post' action='/sall'>
    <div class="form-group col-md-13">
      <label for='agemin'>Age min</label>
      <input id='agemin' name='agemin' type='number' value='18'/>
    </div>
    <div class="form-group col-md-13">
      <label for='agemax'>Age max</label>
      <input id='agemax' name='agemax' type='number' value='130'/>
    </div>
    <div class="form-group col-md-13">
      <label for='distmin'>Distance min</label>
      <input id='distmin' name='distmin' type='number' value='0'/>
    </div>
    <div class="form-group col-md-13">
      <label for='distmax'>Distance max</label>
      <input id='distmax' name='distmax' type='number' value='10000'/>
    </div>
    <div class="form-group col-md-13">
      <label for='popmin'>Popularite min</label>
      <input id='popmin' name='popmin' type='number' value='0'/>
    </div>
    <div class="form-group col-md-13">
      <label for='popmax'>Popularite max</label>
      <input id='popmax' name='popmax' type='number' value='10000'/>
    </div>
<input type='submit' value='Filtrer'>
</form>
<hr>
<form class='containers offset-1 col-10'>
	<div class='row'>
		<% if (locals.users) {locals.users.forEach(function(tmp) {%>
		<div class='ml-2 ml-lg-5 mr-5 col-lg-3 border border-dark mb-5'>
			<div class='row'>
				<div class=' col-12'>
					<% if (tmp.img_profil === 1) { %>
					 <a href="/user?id=<%= tmp.uid%>"><img src="upload/<%= tmp.uid%>-1.png" class="img-thumbnail profil float-left ml-1 mr-1" alt="Photo profil"></a>
					 <% } else { %>
					 <a href="/user?id=<%= tmp.uid%>"><img src="upload/noprofil.png" class="img-thumbnail profil float-left ml-1 mr-1" alt="Photo profil"></a>
					 <% } %>
	 <p><%= tmp.login%><br/>
	 <%= tmp.age%> ans<br/>
	 <%= tmp.ville%><br/>
	 <% if (tmp.genre === 1) {%>
	 Homme<br/>
	 <% } else {%>
	 Femme<br/></p>
	 <% } if (tmp.tlikeid && tmp.tlikeid !== 0) {%>
		<a href="/unlike/<%= tmp.uid%>" class='badge badge-primary'>Ne plus matcher</a>
	 <% } else {%>
		<a href="/like/<%= tmp.uid%>" class='badge badge-primary'>Matcher</a>
	 <% }%>
				</div>
			</div>
			<div class='row'>
					<span class='bg-light col-12'><%= tmp.bio%></span>
			</div>
			<div>
			<% if (tmp.tags) {tmp.tags.forEach(function(ta) {%>
				<span class='badge badge-info'><%= ta %> </span>
			<%})}%>
			</div>
		</div>
	<%})}%>
	</div>
</form>
</div>
</div>
</div>
<% include ../footer %>
